<% include ../partials/header %>
<div class="ui container">
    <div id="content">
        <h1 class="ui dividing header">Teilnehmer</h1>
        <div class="ui segment inverted ">
            <div class="ui divided link items">
                <% teilnehmer.forEach(function(teilnehmer){ %>
                      <a class="item" href="/teilnehmer/<%=teilnehmer._id%>/edit">
                        <div class="ui tiny image">
                          <img class="avatar" src="https://ui-avatars.com/api/?size=200&color=1f7a1f&background=ffffff&name=<%=teilnehmer.name%>"
                          <img class="avatar" src="https://api.adorable.io/avatars/200/abott@adorable.png">
                        </div>
                        <div class="content">
                          <div class="header headerHover"><%=teilnehmer.name%></div>
                          <div class="description">
                            <p>Geburtsdatum: <%=moment(teilnehmer.birthdate).format('DD.MM.YYYY')%></p>
                            <p>Disziplinen: <% teilnehmer.disciplines.forEach(function(discipline){ %>
                                <span><%=discipline %>,</span> <% }) %>
                            </p>
                            
                          </div>
                        </div>
                      </a>
                    <% }) %>
                 </div>
                 <span>Aktuell <%=teilnehmer.length %>  Teilnehmer</span>
            </div>           
        </div>
        <form id="addTeilnehmer" action="/teilnehmer/new" method="GET">
             <input type="submit" class="ui basic button green" value="HinzufÃ¼gen">
        </form>
    </div>
</div>
    




